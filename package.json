    "@dropins/storefront-order": "~1.5.0-alpha1",
    "@dropins/storefront-payment-services": "~1.0.3",
    "@dropins/storefront-pdp": "~1.3.5",
    "@dropins/storefront-personalization": "~1.0.1",
    "@dropins/storefront-product-discovery": "~2.1.0",
